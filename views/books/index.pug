include ../layout
include ../footer

    block content
    h1 Books
    p
      a.button(href='books/new') Create New Book

    table
      thead
        tr.white
          th Title
          th Author
          th Genre
          th Year
      tbody
        tr.white
          td.capitalize
            input(id='search-title' class='search' type='text' name='title' placeholder='Search Title' onkeyup="searchMashup(event)")
          td.capitalize
            input(id='search-author' class='search' type='text' name='author' placeholder='Search Author' onkeyup="searchMashup(event)")
          td.capitalize
            input(id='search-genre' class='search' type='text' name='genre' placeholder='Search Genre' onkeyup="searchGenre(event)")
          td.capitalize
            input(id='search-year' class='search' type='text' name='year' placeholder='Search Year' onkeyup="searchYear(event)")
      each book in books
        tr.selectRow
          td.capitalize.select-title
            a(href="/books/" + book.id) #{book.title}
          td.capitalize.select-author #{book.author}
          td.capitalize.select-genre #{book.genre}
          td.capitalize.select-year #{book.year}

    script(src="../scripts/script.js")
    block footer
            
            