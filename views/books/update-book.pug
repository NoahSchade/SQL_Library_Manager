//- Including dependencies.
include ../layout
include ../footer

//- Inserting content from 'layout.pug'.
block content

  //- Inserting page title, form and error message if the title or author field is not entered.
  h1= title  
  include errors
  form(action="/books/" + book.id + "?_method=PUT", method="post")
    include form
    p
      input(type='submit', value='Update Book')
  form(action="/books/" + book.id + "?_method=DELETE", method="post")
    p
      a.button(href='/books') Cancel
    p
      input(type='submit', value='Delete Book')

